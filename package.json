{
  "name": "alvin-bot",
  "version": "3.0.0",
  "description": "Alvin Bot \u2014 Your personal AI agent on Telegram, WhatsApp, Discord, Signal, and Web.",
  "type": "module",
  "main": "electron/dist/main.cjs",
  "bin": {
    "alvin-bot": "./bin/cli.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "setup": "node bin/cli.js setup",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && electron .",
    "electron:build": "npm run build && npm run electron:compile && electron-builder --publish never",
    "electron:pack": "npm run build && npm run electron:compile && electron-builder --dir --publish never"
  },
  "build": {
    "appId": "com.alvinbot.app",
    "productName": "Alvin Bot",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/dist/**/*",
      "!node_modules",
      "!src",
      "!electron/*.cts"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist"
      },
      {
        "from": "web",
        "to": "app/web"
      },
      {
        "from": "docs",
        "to": "app/docs"
      },
      {
        "from": "plugins",
        "to": "app/plugins"
      },
      {
        "from": "skills",
        "to": "app/skills"
      },
      {
        "from": "node_modules",
        "to": "app/node_modules"
      },
      {
        "from": "build",
        "to": "build"
      },
      {
        "from": "package.json",
        "to": "app/package.json"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "claude",
    "agent",
    "llm",
    "multi-model",
    "gpt",
    "gemini",
    "nvidia",
    "self-hosted",
    "autonomous"
  ],
  "author": "Ali Levin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvbln/alvin-bot"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "dotenv": "^16.4.0",
    "grammy": "^1.30.0",
    "node-edge-tts": "^1.2.10",
    "whatsapp-web.js": "^1.34.6",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  }
}
